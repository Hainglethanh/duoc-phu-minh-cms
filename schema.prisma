datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Product {
  id               String          @id @default(cuid())
  name             String          @default("")
  slug             String          @default("")
  shortDescription String          @default("")
  origin           String          @default("")
  content          String          @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  uses             String          @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  price            Int?
  feature          ProductFeature? @relation("Product_feature", fields: [featureId], references: [id])
  featureId        String?         @map("feature")
  productImages    ProductImage[]  @relation("ProductImage_product")

  @@index([featureId])
}

model ProductImage {
  id              String   @id @default(cuid())
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  altText         String   @default("")
  name            String   @default("")
  product         Product? @relation("ProductImage_product", fields: [productId], references: [id])
  productId       String?  @map("product")

  @@index([productId])
}

model Slider {
  id              String  @id @default(cuid())
  name            String  @default("")
  title           String  @default("")
  subTitle        String  @default("")
  status          Boolean @default(true)
  url             String  @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
  posts    Post[] @relation("Post_author")
}

model Post {
  id                  String    @id @default(cuid())
  title               String    @default("")
  thumbnail_filesize  Int?
  thumbnail_extension String?
  thumbnail_width     Int?
  thumbnail_height    Int?
  thumbnail_id        String?
  slug                String    @default("")
  shortDescription    String    @default("")
  status              String?   @default("draft")
  content             String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate         DateTime? @default(now())
  author              User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId            String?   @map("author")
  postType            PostType? @relation("Post_postType", fields: [postTypeId], references: [id])
  postTypeId          String?   @map("postType")
  tags                Tag[]     @relation("Post_tags")

  @@index([authorId])
  @@index([postTypeId])
}

model PostType {
  id    String @id @default(cuid())
  name  String @default("")
  slug  String @default("")
  posts Post[] @relation("Post_postType")
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model ProductFeature {
  id      String    @id @default(cuid())
  name    String    @default("")
  product Product[] @relation("Product_feature")
}

model FAQ {
  id       String @id @default(cuid())
  question String @default("")
  content  String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}